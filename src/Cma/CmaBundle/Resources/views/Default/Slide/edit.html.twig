{% extends 'CmaBundle:Administrator:index.html.twig' %}


{% block body %}

    <section id="content"><main class="main"><div class="clearfix">
                <h4>
                    <i class="icon-edit"></i>Modifier slide :</h4>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <section class="panel">

                        <form action="{{ path('slider_edit',{'id': slide.id}) }}" class="form-horizontal" method="POST"  {{ form_enctype(form) }} fole="form" >
                            <div class="row-fluid">
                                <div class="span12">

                                    {% if slide.tag %}
                                        <img src="{{ asset(slide.getWebPath()) }}" width="612px" tag="{{slide.tag}}" />
                                    {% else %}
                                        <h2>Pas d'image de profil chargée !</2>
                                        {% endif %}
                                        <div class="control-group">
                                            <p><strong> Le titre slide doit etre de la sorte :</strong>
                                            <ul>
                                                <li>
                                                    slide1
                                                </li>
                                                <li>
                                                    slide2
                                                </li>
                                                <li>
                                                   ...
                                                </li>
                                            </ul>
                                            La résolution de l'image : <strong style="color:red;">620x323px</strong> à respecter !  
                                            </p>
                                            {{ form(form) }}
                                        </div>
                                        {{ form_rest(form) }}
                                        <div class="control-group">
                                            <div class="controls">                      
                                                <a href="{{path('slider_index')}}"><button class="btn btn-white">Cancel</button></a>
                                                <button type="submit" class="btn btn-primary">Save</button>
                                                <input value="" type="hidden">
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </form>
                    </section>

                {% endblock %}
