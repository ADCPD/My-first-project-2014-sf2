{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Apropos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description1</th>
                <th>Description2</th>
                <th>Tag</th>
                <th>Imagelocation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('apropos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description1 }}</td>
                <td>{{ entity.description2 }}</td>
                <td>{{ entity.tag }}</td>
                <td>{{ entity.imageLocation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('apropos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('apropos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('apropos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
