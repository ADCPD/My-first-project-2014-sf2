{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Apropos</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description1</th>
                <td>{{ entity.description1 }}</td>
            </tr>
            <tr>
                <th>Description2</th>
                <td>{{ entity.description2 }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ entity.tag }}</td>
            </tr>
            <tr>
                <th>Imagelocation</th>
                <td>{{ entity.imageLocation }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('apropos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('apropos_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
