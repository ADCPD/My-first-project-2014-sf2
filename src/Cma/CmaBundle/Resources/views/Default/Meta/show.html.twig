{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Meta</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slogon</th>
                <td>{{ entity.slogon }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Imagelocation</th>
                <td>{{ entity.imageLocation }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ entity.tag }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Keyword</th>
                <td>{{ entity.keyword }}</td>
            </tr>
            <tr>
                <th>Script</th>
                <td>{{ entity.script }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gallery') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
