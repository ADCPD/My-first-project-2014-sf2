{% extends 'CmaBundle:Administrator:index.html.twig' %}

{% block body %}

    <section id="content"><main class="main"><div class="clearfix">
                <h4>
                    <i class="icon-edit"></i> Ajouter du meta data :</h4>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <section class="panel">

                        <form action="{{ path('meta_edit',{'id':meta.id}) }}" class="form-horizontal" method="POST"  {{ form_enctype(form) }} fole="form" >
                            <div class="row-fluid">
                                <div class="span7">
 
                                    <div class="control-group">

                                         {{ form(form) }}
                                    </div>

                                    {{ form_rest(form) }}
                                    <div class="control-group">
                                        <div class="controls">                      
                                            <a href="{{path('meta_index')}}"><button class="btn btn-white">Cancel</button></a>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <input value="" type="hidden">
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </section>

                {% endblock %}
